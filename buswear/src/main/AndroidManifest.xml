<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="pl.tajchert.buswear">

    <application>

        <service
            android:name="pl.tajchert.buswear.wear.EventCatcher"
            tools:node="replace">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/pl.tajchert.buswear" />
            </intent-filter>
        </service>

    </application>

</manifest>
